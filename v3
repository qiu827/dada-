#include<stdio.h>
#include<string.h>
int main()
{
	char strExp[]="2+2*3+2/2-1";
	int a=strExp[0]-'0';
	int i;
	int b,c,d;
	for(i=0;i<strlen(strExp);i++)
	{
		
		if(strExp[i]=='*')
		{
			b=(strExp[i-1]-'0')*(strExp[i+1]-'0');
		}
		else if(strExp[i]=='/')
		{
			c=(strExp[i-1]-'0')/(strExp[i+1]-'0');
			d=a+b+c-(strExp[i+3]-'0');
		}
	}
	printf("d = %d\n",d);
	return 0;
}
